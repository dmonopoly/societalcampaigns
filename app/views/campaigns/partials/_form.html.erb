<!--form for campaigns new and edit; requires 'campaign', 'button_name'-->
<%= form_for campaign do |f| %>
	<!--Title-->
	<div id="title_area">
		<%= f.label :title %><br>
		<%= f.text_field :title, id: "title_form" %>
	</div>

	<!--Description-->
	<div id="description_area">
		<%= f.label :description %><br>
		<%= f.text_area :description, id: "description_form" %>
	</div>
	
	<!--Links-->
	<div id="link_area">
		<%= f.label :link, "Links" %><br>
		<ul>
		<%= f.fields_for :occurrences do |builder| %>
			<li class="no_bullet no_left_padding">
				<%= builder.text_field :link %>
			</li>
		<% end %>
		</ul>
	</div>
	
	<!--Button Area-->
	<div id="buttons">
		<%= f.submit button_name, id: "submit_campaign_button" %>
	</div>
<% end %>